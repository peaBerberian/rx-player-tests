{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./js/**/*.ts"
  ]
}
